<Window x:Class="TwoFactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoFactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Log" Grid.Row="1" HorizontalAlignment="Center" Text="Логин" FontSize="20" Height="30" Width="60"/>
        <TextBox Name="LogIn" Grid.Row="2" HorizontalAlignment="Center" FontSize="20" Height="30" Width="150" TextChanged="LogIn_TextChanged">admin</TextBox>
        <TextBlock Name="Password" Grid.Row="3" HorizontalAlignment="Center" Text="Пароль" FontSize="20" Height="30" Width="70"/>
        <PasswordBox Name="PasswordIn" Grid.Row="4" HorizontalAlignment="Center" FontSize="20" Height="30" Width="150" Password="admin123"></PasswordBox>
        <Button Grid.Row="5" Height="30" Width="150" FontSize="20" Content="Авторизация"/>
    </Grid>
</Window>
